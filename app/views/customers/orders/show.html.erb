<br><br>
<div class='container'>
  <div class='row my-4'>
    <div class='offset-1'>
     <h3>注文履歴詳細</h3>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-6'>
      <h4>注文情報</h4>
      <table class='table table-bordered'>
        <tbody class='thead-light'>
          <tr>
            <th>注文日</th>
            <td class='font-weight-bold'><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td class='font-weight-bold'><%= @order.address %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td class='font-weight-bold'><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td class='font-weight-bold'><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class='col-md-4'>
      <h4>請求情報</h4>
      <table class='table table-bordered'>
        <tbody class='thead-light'>
          <tr>
            <th>商品合計</th>
            <td class='font-weight-bold'><%= @order.total_payment - @shipping_cost %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td class='font-weight-bold'><%= @shipping_cost %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td class='font-weight-bold'><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-8'>
      <h4>注文内容</h4>
      <table class='table table-bordered'>
        <thead class='thead-light'>
          <tr>
            <th style='width: 50%'>商品</th>
            <th style='width: 20%'>単価（税込）</th>
            <th style='width: 15%'>個数</th>
            <th style='width: 15%'>小計</th>
          </tr>
        </thead>
        <% @order_details.each do |order_detail| %>
        <tbody>
          <tr>
            <td class='font-weight-bold'><%= order_detail.item.name %></td>
            <td class='font-weight-bold'><%= (order_detail.price * 1.10).to_i %></td>
            <td class='font-weight-bold'><%= order_detail.amount %></td>
            <td class='font-weight-bold'><%= (order_detail.price * order_detail.amount * 1.10).to_i %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>