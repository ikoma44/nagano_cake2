<div class='container'>
  <br><br>
  　<h4>新規会員登録</h4>
　　
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <div class='row'>
    <div class="col-md-2 offset-md-1">
    名前 
    </div>
    <div class="col-md-1 text-right">
      <%= f.label :（姓） %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :last_name, class: 'form-control', placeholder: "会員", autofocus: true %>
    </div>
    
    <div class="col-md-1 text-right">
      <%= f.label :（名） %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name, class: 'form-control', placeholder: "太郎", autofocus: true %>
    </div>
  </div><br>
  
  <div class='row'>
    <div class="col-md-2 offset-md-1">
    フリガナ
    </div>
    <div class="col-md-1 text-right">
      <%= f.label :（セイ） %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :last_name_kana, class: 'form-control', placeholder: "カイイン", autofocus: true %>
    </div>
    
    <div class="col-md-1 text-right">
      <%= f.label :（メイ） %>
    </div>
    <div class="col-md-3">
      <%= f.text_field :first_name_kana, class: 'form-control', placeholder: "タロウ", autofocus: true %>
    </div>
  </div><br>  
  
  <div class='row'>
    <div class="col-md-2 offset-md-1">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-md-5 offset-md-1 mr-auto"> 
      <%= f.email_field :email, class: 'form-control', placeholder: "naganocake@example.com", autofocus: true %>
    </div>
  </div><br>  
    
  <div class='row'>  
    <div class="col-md-2 offset-md-1">
      <%= f.label :郵便番号（ハイフンなし） %>
    </div>
    <div class="col-md-3 offset-md-1 mr-auto">
      <%= f.text_field :postal_code, class: 'form-control', placeholder: "1234567", autofocus: true %>
    </div>
  </div><br>
  
  <div class='row'>
    <div class="col-md-2 offset-md-1">
      <%= f.label :住所 %>
    </div>
    <div class="col-md-5 offset-md-1 mr-auto">
      <%= f.text_field :address, class: 'form-control', placeholder: "東京都渋谷区◯◯◯◯◯◯", autofocus: true %>
    </div>
  </div><br> 
    
  <div class='row'>
    <div class="col-md-2 offset-md-1"> 
      <%= f.label :電話番号（ハイフンなし） %>
    </div>
    <div class="col-md-3 offset-md-1 mr-auto">
      <%= f.text_field :telephone_number, class: 'form-control', placeholder: "09012345678", autofocus: true %>
    </div>
  </div><br>  
    
  <div class='row'>
    <div class="col-md-2 offset-md-1"> 
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
    </div>
    <div class="col-md-3 offset-md-1 mr-auto">
      <%= f.password_field :password, class: 'form-control', placeholder: "******", autocomplete: "new-password" %>
    </div>
  </div><br>  
  
  <div class='row'>
    <div class="col-md-2 offset-md-1"> 
      <%= f.label :パスワード（確認用） %>
    </div>
    <div class="col-md-3 offset-md-1 mr-auto">
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "******", autocomplete: "new-password" %>
    </div>
  </div><br>  
  
  <div class="row">
    <div class="col-md-3 offset-md-4"> 
      <%= f.submit "新規登録", class: 'btn btn-success btn-sm' %>
    </div>
  </div><br>
  <% end %>
  
  <div class="row">
    <div class="col-md-3 offset-md-2"> 
      <h5>既に登録済みの方</h5>
    </div>
  </div>
   <div class="row">
    <div class="col-md-3 offset-md-2">
      <%= link_to 'こちら', new_customer_session_path %>　からログインして下さい
    </div>
  </div>  
</div>