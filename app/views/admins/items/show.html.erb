<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <h2>商品詳細</h2>
      <div class="col-md-3">

        <!--%= attachment_image_tag @item, :image_id, :fill, 50, 50,fallback: "no_image.jpg" %-->


      </div>
        <div class="col-md-8 offset-md-1">
          <table class="table table-striped">

          <div class="form-group">
            <label for="item_name">商品名</label>
            <%= @item.name %>
          </div>

          <div class="form-group">
            <label for="item_introduction">商品説明</label>
            <%= @item.introduction %>
          </div>

          <div class="form-group">
            <label for="item_genre_id">ジャンル</label>
            <%= @item.genre.name %>
          </div>

          <div class="form-group">
            <label for="item_price">税込価格</br>
              (税抜価格)
            </label>
            <%= @item.add_tax_price.to_s(:dalimited) %>
            ( <%= @item.price %> ) 円
          </div>

          <div class="form-group">
            <label for="item_is_active">販売ステータス</label>
            <%= @item.is_active %>
          </div>

          <div class="form-group">
            <%= link_to "編集する", edit_admins_item_path %>
          </div>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>