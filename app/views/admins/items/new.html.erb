<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>商品新規登録</h2>
        <from enctype="multipart/form-data"> <!--編集中-->

        <%= form_with model: @item, local:true do |f| %>

          <div class="form-group">
            <label for="item_image_id">商品画像</label>
            <%= attachment_image_tag @item, :image_id, :fill, 60, 60%>
            <%= f.attachment_field :image_id, placeholder: "プロフィール画像" %>
          </div>

          <div class="form-group">
            <label for="item_name">商品名</label>
            <%= f.text_field :name %>
          </div>

          <div class="form-group">
            <label for="item_introduction">商品説明</label>
            <%= f.text_area :introduction %>
          </div>

          <!--ジャンル選択-->

          <div class="form-group">
            <label for="item_price">税抜価格</label>
            <%= f.text_field :price %>
          </div>

          <!--販売ステータス-->

          <div class="form-group">
            <%= f.submit "新規登録", class: "btn btn-secondary" %>
          </div>
        <% end %>
        </from>
      </div>
    </div>
  </div>
</main>