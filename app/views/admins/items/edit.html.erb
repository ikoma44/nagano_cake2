<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>商品編集</h2>
        <from enctype="multipart/form-data">

        <%= form_with model: @item, url: admins_items_path, local:true do |f| %>

          <div class="form-group">
            <label for="item_image_id">商品画像</label>
            <%= attachment_image_tag @item, :image_id, :fill, 60, 60 %>
            <%= f.attachment_field :image %>
          </div>

          <div class="form-group">
            <label for="item_name">商品名</label>
            <%= f.text_field :name %>
          </div>

          <div class="form-group">
            <label for="item_introduction">商品説明</label>
            <%= f.text_area :introduction %>
          </div>

          <div class="form-group">
            <label for="item_genre_id">ジャンル</label>
            <%= f.collection_select :genre_id, Genre.all, :id, :name %>
          </div>

          <div class="form-group">
            <label for="item_price">税抜価格</label>
            <%= f.text_field :price %>
          </div>

          <!--販売ステータス-->
          <div class="form-group">
            <label for="item_is_active">販売ステータス</label>
            <%= form_with(model: item, local: true) do |form| %>
              <%= form.radio_button :is_active, :sale, checked: true %>
              <%= form.label :is_active, "販売中", {value: :sale, style: "display: inline-block;"} %>
              <%= form.radio_button :is_active, :suspended %>
              <%= form.label :is_active, "販売停止中", {value: :suspended, style: "display: inline-block;"} %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.submit "変更を保存", class: "btn btn-secondary" %>
          </div>
        <% end %>
        </from>
      </div>
    </div>
  </div>
</main>