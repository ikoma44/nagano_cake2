 <div>
   <div class="col-md-8 offset-md-1">
      <h2>商品一覧</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_active %></td>
            </tr>
          <% end %>
        </tbody>
        <%= paginate @items %>
      </table>
   </div>
 </div>