<br><br><br>
<div class="container">
  <div class="row my-4">    
    <h5 class ="bg-light">注文履歴一覧</h3>
  </div> 
  
  <div class="row">
    
  
    <table class="table table-bottom-bordered">
      <thead class="thead-light">
        <tr>
          <th style="width: 30%">購入日時</th>
          <th style="width: 20%">購入者</th>
          <th style="width: 25%">注文個数</th>
          <th style="width: 25%">注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td>
            <%= link_to admins_order_path(order) do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% end %>
          </td>
          <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <% count = 0 %>
          <% order.order_details.each do |order_detail|  %>
          <% count += order_detail.amount %>
          <% end %>
          <td><%= count %></td>
          <td><%= order.status %></td>
        </tr>
      </tbody>
      <% end %>
      
    </table>
  </div>
  
  <div class="row">
    <div class="col-md-3 offset-md-9">
        <%= paginate @orders %>
    </div>    
  </div>
      
</div>