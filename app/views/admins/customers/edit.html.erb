<div class="container">
  <div class="row my-4">
    <h5 class="bg-ligth" >
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
    </h5>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "会員ID" %>
    </div>
    <div class="col">
      <%= @customer.id %>
    </div>
  </div>
  <%= form_with model: [:admins, @customer], method: :patch, local: true do |f| %>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "氏名" %>
    </div>
    <div class="col">
      <%= f.text_field :last_name %> <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "フリガナ" %>
    </div>
    <div class="col">
      <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "郵便番号" %>
    </div>
    <div class="col">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "住所" %>
    </div>
    <div class="col">
      <%= f.text_field :address, size: "80" %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "電話番号" %>
    </div>
    <div class="col">
      <%= f.text_field :telephone_number %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "メールアドレス" %>
    </div>
    <div class="col">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "会員ステータス" %>
    </div>
    <div class="col">
      <%= f.radio_button :is_active,false %>
      <%= f.label :is_active, '有効', value: false %>
      <%= f.radio_button :is_active,true %>
      <%= f.label :is_active, '退会', value: true %>
    </div>
 </div>
    <div class="text-center">
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
      <% end %>
    </div>
  <br></br>