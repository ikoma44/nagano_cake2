<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <h2>
        <%= customer.last_name %>
        <%= customer.first_name %>
        の会員詳細
      </h2>
      <from enctype="multipart/form-data">

        <%= form_with model: @customer, url: admins_customers_path, local:true do |f| %>




            <div class="form-group">
              <label for="customer_customer_id">会員ID</label>
              <%= customer.customer_id %>
            </div>

            <div class="form-group">
              <label for="customer_name">氏名</label>
              <%= f.text_field :last_name %>
              <%= f.text_field :last_name %>
            </div>

            <div class="form-group">
              <label for="customer_name_kana">フリガナ</label>
              <%= f.text_field :last_name_kana %>
              <%= f.text_field :last_name_kana %>
            </div>

            <div class="form-group">
              <label for="customer_postal_code">郵便番号</label>
              <%= f.text_field :postal_code %>
            </div>

            <div class="form-group">
              <label for="customer_address">住所</label>
              <%= f.text_field :address %>
            </div>

            <div class="form-group">
              <label for="customer_telephone_number">電話番号</label>
              <%= f.text_field :telephone_number %>
            </div>

            <div class="form-group">
              <label for="customer_email">メールアドレス</label>
              <%= f.text_field :email %>
            </div>

            <!--会員ステータス未-->
            <div class="form-group">
              <label for="customer_is_active">会員ステータス</label>
                <%= f.radio_button :is_active, :valid, checked: true %>
                <%= f.label :is_active, "有効", {value: :valid, style: "display: inline-block;"} %>
                <%= f.radio_button :is_active, :withdrawal %>
                <%= f.label :is_active, "退会", {value: :withdrawal, style: "display: inline-block;"} %>
            </div>

          <div class="form-group">
            <%= f.submit "変更を保存", class: "btn btn-secondary" %>
          </div>
        <% end %>
        </from>
      </div>
    </div>
  </div>
</main>