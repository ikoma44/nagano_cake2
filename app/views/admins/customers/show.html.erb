
<div class="container">
  <div class='row my-4'>
    <h5 class="bg-light text-center">
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
    </h5>
  </div>
  <div class='row'>
    <div class='col-md-8'>
      <div class='row'>
        <div class='col-md-3 mb-4'>
          <%= "会員ID" %>
        </div>
        <div class='col-md-0'>
          <%= @customer.id %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-4'>
          <%= "氏名" %>
        </div>
        <div class='col-md-0'>
          <%= @customer.last_name %>　<%= @customer.first_name %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-4'>
          <%= "フリガナ" %>
        </div>
        <div class='col-md-0'>
          <%= @customer.last_name_kana %>　<%= @customer.first_name_kana %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-4'>
          <%= "郵便番号" %>
        </div>
        <div class='col-md-0'>
          <%= @customer. postal_code %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-4'>
          <%= "住所" %>
        </div>
        <div class='col-md-0'>
          <%= @customer.address %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-4'>
          <%= "電話番号" %>
        </div>
        <div class='col-md-0'>
          <%= @customer.telephone_number %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-4'>
          <%= "メールアドレス" %>
        </div>
        <div class='col-md-0'>
          <%= @customer.email %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-4'>
          <%= "会員ステータス" %>
        </div>
        <div class='col-md-0'>
          <% if @customer.is_active == true %>
            <p class="text-secondary font-weight-bold">退会</p>
          <% elsif @customer.is_active == false %>
            <p class="text-success font-weight-bold">有効</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
    <div class='row'>
      <div class='col-2'></div>
    <div class='col-3'>
      <%= link_to "編集する", edit_admins_customer_path(@customer.id), class: 'btn btn-success' %>
    </div>
    <div class='col'>
      <!--%= link_to "注文履歴一覧を見る", admins_item_path, class: 'btn btn-primary' %-->
    </div>
  </div>
</div>
<br>