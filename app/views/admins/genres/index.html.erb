<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>ジャンル一覧・追加</h2>
        <from enctype="multipart/form-data">

          <%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>


            <div class="form-group">
              <label for="genres_name">ジャンル名</label>
              <%= f.text_field :name %>
              <%= f.submit "新規登録", class: "btn btn-secondary" %>
            </div>
          <% end %>

          <table class="table table-striped">
            <thead>
              <tr>
                <th>ジャンル</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= link_to "編集する", edit_admins_genre_path(genre.id) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </from>
      </div>
    </div>
  </div>
</main>